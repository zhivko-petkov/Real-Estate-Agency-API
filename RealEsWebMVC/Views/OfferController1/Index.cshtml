@model IEnumerable<RealEsWebMVC.ViewModels.OfferVM>

@{
    ViewData["Title"] = "Оферти";
}

<h1>Оферти</h1>

<p>
    <a asp-action="Create">Добавяне</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="card">
        <img src="@Html.DisplayFor(modelItem => item.Img)" alt="Apartment" style="width:100%">
        <h2>@Html.DisplayFor(modelItem => item.ApartmentName)</h2>
        <p class="price">@Html.DisplayFor(modelItem => item.Area) кв.м</p>
        <p class="price">@Html.DisplayFor(modelItem => item.Price) лв.</p>
        <p class="price">град @Html.DisplayFor(modelItem => item.TownName)</p>
        <p>
            @Html.ActionLink("Редактиране", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Детайли", "Details", new { id = item.Id }) |
            @Html.ActionLink("Изтрий", "Delete", new { id = item.Id })
        </p>
    </div>

    }
</div>

<style>
    .card {
        float: left;
        width: 50%;
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }
</style>
